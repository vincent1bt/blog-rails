<div class="main_form_session">
<h2>Registrate</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

      -Nosotros tenemos acceso a tus datos <br>
      -Tu password se cifra con un algoritmo para que nadie
        pueda robartelo <br>
      -Puedes eliminar tu cuenta cuando gustes
    
  <fieldset>
    <legend>Nombre</legend>

    <%= f.label :name do %>
    <%= f.text_field :name, autofocus: true %>
    <% end %>
  </fieldset>

<fieldset>
  <legend>Email</legend>

  <%= f.label :email do %>
  <%= f.email_field :email, autofocus: true %>
  <% end %>
</fieldset>

  <fieldset>
    <legend>contraseña</legend>

    <%= f.label :password do %>
    <% if @validatable %>
    <em>(<%= @minimum_password_length %> caracteres minimos)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off" %>
    <% end %>
  </fieldset>

  <fieldset>
    <legend>Repetir contraseña</legend>

    <%= f.label :password_confirmation do %>
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
    <% end %>
  </fieldset>


  <div class="actions">
    <%= f.submit "Registrar", class: "button radius" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
