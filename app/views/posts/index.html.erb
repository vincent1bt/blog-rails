<div class="main">
  <div class="main">
      <% @posts.each do |post| %>
        <h3><%= link_to post.title, post %> </h3>

          Creado por <%= post.user.name %> el <%= post.created_at.strftime("%b %d, %Y") %> |
          <%= post.comments.count %> Comentarios
        <p>
         <%= post.body[0..100] + "..." %> <%= link_to "Seguir leyendo", post %>
       </p>
       <% if post.picture_file_name %>

         <%= image_tag post.picture.url(:medium) %>

       <% end %>
        <hr>

      <% end %>
      <p>  <%= link_to "Nuevo", new_post_path %> </p>
  </div>
</div>
